<% type = @comment.commentable_type.underscore %>

$('.comment-errors').html('<%= render 'shared/errors', resource: @comment %>');

<% if @comment.persisted? %>
  $('.<%= type %>-comments .new-comment').before("<%= j render @comment %>");
  $('.<%= type %>-comments .new-comment #comment_body').val('');
<% end %>
