$('.question-errors').html('<%= render 'shared/errors', resource: @question %>');

<% if @question.links.any?(&:gist?) %>
  window.location.reload();
<% else %>
  <% unless @question.errors.present? %>
    $('#question-<%= @question.id %>').replaceWith('<%= j render @question %>');
    $('.errors').html('');
  <% end %>
<% end %>
