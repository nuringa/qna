$('#answer-<%= @answer.id %> .errors').html('<%= render 'shared/errors', resource: @answer %>');

<% if @answer.links.any?(&:gist?) %>
  window.location.reload(); // fix partial view of answer script
<% else %>
  <% unless @answer.errors.present? %>
    $('#answer-<%= @answer.id %>').replaceWith('<%= j render @answer %>');
    $('.errors').html('');
  <% end %>
<% end %>
